<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProiectMedii.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProiectMedii"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:AboutPage}"/>
        <ShellContent
            Title="Services"
            ContentTemplate="{DataTemplate local:ServiciesEntryPage}"/>
        <ShellContent
            Title="NailArtist"
            ContentTemplate="{DataTemplate local:NailArtistPage}"/>
        <ShellContent
            Title="MyBookings"
            ContentTemplate="{DataTemplate local:MyBookingsPage}"/>
        <ShellContent
            Title="MySalons"
            ContentTemplate="{DataTemplate local:MySalonsPage}"/>

    </TabBar>
</Shell>
